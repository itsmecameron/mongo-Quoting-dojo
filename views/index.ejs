<body>
    <div class="container">
        <h1>Welcome to Quoting Dojo</h1>
        <form action="/quote/process" method="POST">
            <div class="form-group">
                <label for="name">name:</label>
                <input type="text" class="form-control" name="name" aria-describedby="name" placeholder="name">
            </div>
            <div class="form-group">
                <label for="quote">Quote:</label>
                <textarea class="form-control" name="quote" rows="3"></textarea>
              </div>
            <button type="submit" class="btn btn-success">Add my Quote</button>
        </form>
        <a class="btn btn-info" href="/quote">Skip to Quotes!</a>
    </div>
</body>

</html>